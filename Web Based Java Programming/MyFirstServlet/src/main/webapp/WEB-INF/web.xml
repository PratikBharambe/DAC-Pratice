<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>MyFirstServlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
	  <servlet-name>hello</servlet-name>
	  <servlet-class>com.demo.servlet.MyFirstServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>hello</servlet-name>
	  <url-pattern>/helloworld</url-pattern>
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>login</servlet-name>
	  <servlet-class>com.demo.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>login</servlet-name>
	  <url-pattern>/validateData</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>com.demo.servlet.AdditionServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>add</servlet-name>
  <url-pattern>/addtion</url-pattern>
  </servlet-mapping>
 
</web-app>
